              </div>
            </div>
          </div><!--/.row -->
        </div><!--/.container -->
      </footer>
    </div>


    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery.min.js" %>
    <%= javascript_include_tag "jquery.slimscroll.js", "jquery.slimscroll.min.js" %>
    <%= javascript_include_tag "isotope.pkgd.js" %>
    <%= javascript_include_tag "jquery.raty.js", "letsrate.js"%>

    <script>
      $('#myCarousel').carousel({
        interval: 5000
      });
    </script>

    <script>
      $('#inner-content-div').slimScroll({
        alwaysVisible: true,
        position: 'right',
        size: '10px',
        distance: '5px',
        railVisible: true,
        railColor: '#98fb98',
        railOpacity: 0.7,
        color: '#2e8b57',
        start: $('#child_image_element'),
        wheelStep: 10,
        allowPageScroll: false,
        disableFadeOut: false
      });
    </script>

    <script>
      $( function() {
        // init Isotope
        var $container = $('.isotope').isotope({
          itemSelector: '.pin',
          layoutMode: 'masonry',
          getSortData: {
            desc: '.desc',
            info: '.info',
          }
        });

        // bind sort button click
        $('#sorts').on( 'click', 'button', function() {
          var sortByValue = $(this).attr('data-sort-by');
          $container.isotope({ sortBy: sortByValue });
        });
      });
    </script>


    <script>
    $(function() {
      $('#datepicker').datepicker();
    });
    </script>
        
    </body>
</html>
