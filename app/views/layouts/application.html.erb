    <%= yield %>

     <div class="pull-right" style="margin-right: 1%; margin-top: 0.7%">
      <a href="#">
        <%= image_tag 'arrow.png' %>
      </a>
    </div>

    <!--<div class="pull-right" style="margin-right: 1%; margin-top: 1.2%">
      <a href="#">
      </a>
    </div>-->

    <div class="pagination-centered">
      <footer style="background-color: #e6fae1; color: #015629; margin-top: 0px; border-top-width: 2px; border-top-color: black">
        <div class="container">
          <div class="row">
            <div class="span4">
              <h2>About Us</h2>
              <p>
                STRePSyls is a web application designed to make media collation easier for the user through an online platform of showcasing information.
              <!--<br><i class="icon-bolt"></i> <i class="icon-remove"></i> <i class="icon-group"></i>-->
