            </div>

            <div class="span4" style="padding-top: 10px">
              <%= image_tag 'wsg.gif' %>

              <div style="padding-top: 10px">
                <p>
                  STRePSyls<%= image_tag 'space.png', :style => "width: 1.7%" %><%= image_tag 'copyright.gif', :style => "margin-bottom: .5%" %><%= image_tag 'space.png', :style => "width: 1.3%" %>2013
