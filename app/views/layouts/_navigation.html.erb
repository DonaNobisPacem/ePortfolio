			    <div class="input-append" style="margin-top: 2%; margin-left: 4%">
			      <%= form_tag search_path, :method => 'get', :class => "form-search" do %>

				    <%= text_field_tag :search, params[:search], :class => "span2 search-query", :placeholder => "Search for users or projects", :style => "width: 100%" %>    

				    <%= button_tag :type => "submit", :class => "btn", :style => "margin-left: -5%" do %>
				    <i class="icon-search"></i>
				    <% end %>
				  <% end %>
		        </div>
		      </li>
			</ul>

			<ul class="nav pull-right">
