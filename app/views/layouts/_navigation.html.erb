<% if user_signed_in? %>
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner" >

	    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
	    </a>

	    <a class="brand" href="/"><%= image_tag "brand.png", :style => "margin-top: -4%" %></a>

	    <div class="nav-collapse">
			<ul class="nav pull-left">
			  <li class="">
			  <%= form_tag search_path, :method => 'get', :class => "form-search" do %>
			    <div class="input-append" style="margin-top: 2.5%">
		              <!-- <input type="text" name="q" class="span2 search-query" placeholder="Search for files, etc" style="width: 130%">
		              <button type="submit" class="btn" style="margin-left: -5%"><i class="icon-search"></i></button> -->
				    <%= text_field_tag :search, params[:search], :class => "span2 search-query", :placeholder => "Search", :style => "width 130%" %>
				    <%= button_tag :type => "submit", :class => "btn" do %>
				    <i class="icon-search"></i>
				    <% end %>
		        </div>
		        <% end %>
		       </li>
			</ul>



			<ul class="nav pull-right">
			  <li class="">
			  	<%= link_to root_path do %>
			  	<i class="icon-home"></i> Home
			  	<% end %>
			  </li>
			  <li class="">
			  	<%= link_to current_user do %>
			  	<i class="icon-book"></i> Portfolio
			  	<% end %>
			  </li>
			  <li class="">
			  	<%= link_to help_path do %>
			  	<i class="icon-question-sign"></i> Help
			  	<% end %>
			  </li>
			  <li class="">
			  	<%= link_to(destroy_user_session_path, :method=>'delete') do %>
			  	<i class="icon-signout"></i> Logout
			  	<% end %>
			  </li>
			</ul>
	    </div>
    </div><!-- /navbar-inner -->
</div><!-- /navbar-fixed-top -->
<% end %>