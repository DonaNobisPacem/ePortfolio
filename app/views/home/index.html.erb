<% provide(:title, 'ePortfolio') %>

<div class="container-fluid" style="background-color: #82FA58; padding-top: 3%; padding-bottom: 8%;">
      <div class="row-fluid">
        <div class="span3" style="margin-left: 5%; margin-right: 4%;">

        <br><br><br><br><br>

          <div class="well sidebar-nav">
            <form action="/login/" method="post" style="color: green;" align="center"><br>
              <div class="input-prepend">
	        <span class="add-on"><i class="icon-user"></i></span>

                <input class="input-medium" type="text" name="username" placeholder="Username"/>
              </div>

              <div class="input-prepend">
	        <span class="add-on"><i class="icon-lock"></i></span>
                <input class="input-medium" type="password" name="password" placeholder="Password" />
              </div>

              <div class="btn-toolbar">
                <div class="row-fluid">
                  <div class="span4" style="margin-left: 1.25%; width: 50%">
                    <button class="btn btn-success" type="submit">
                      <i class="icon-signin"></i> Login
                    </button>
                  </div>

                  <div class="span3" style="margin-left: -5%; width: 50%">
		       <button class="btn btn-success" type="submit">
                      <i class="icon-pencil"></i> Sign Up
                    </button>
                  </div><!-- /span8 -->
                </div><!-- /rowfluid -->
              </div><!-- /btn-toolbar -->
            </form>
          </div><!-- /well -->
        </div><!-- /span-->

        <div class="span9" style="width: 62%; margin-left: 0.010%;">
          <div class="hero-unit">
            <h1>Welcome!</h1><br>
            <p>ePortfolio is a blah blah blah fuck this shit tangina feria potangena pakshet
            <a class="text-error" href="#">Report</a> any bugs which you may encounter while using the application.
             User Manual and Frequently Asked Questions (FAQs) are available at the <a class="text-error" href="/help">Help</a> section.</p>
          </div>
        </div>
      </div><!-- /rowfluid -->
    </div><!-- /containerfluid -->

<% if user_signed_in? %>
	<h3> <%= link_to @user_profile.first_name + " " + @user_profile.last_name, @user %> </h3>
	<table class="table table-striped table-bordered">
		<tr>
			<th>Title</th>
			<th>Contributor</th>
			<th>Description</th>
			<th>Tags</th>
		</tr>
		<% @projects.each do |project| %>
			<tr>
				<td class="span2" style="word-wrap:break-word"> <%= link_to project.title, project %> </td>
				<td class="span3" style="word-wrap:break-word"> <%= User.find(current_user.id).username %> </td>
				<td class="span1" style="word-wrap:break-word"> <%= project.description %> </td>       
				<td class="span1" style="word-wrap:break-word"><%= raw project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>
			</tr>
		<% end %>
	</table>
	<%= will_paginate @projects %>
	<%= link_to 'Create Project', new_project_path, class: "btn btn-large btn-primary" %>
<% end %>