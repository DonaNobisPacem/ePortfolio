<% provide(:title, 'Users') %>
<% if user_signed_in? %>

<div class="container-fluid" style="background-color: #015629; padding-top: 5%; padding-bottom: 5%">
    <div class="span12 offset2" align="center">
	<table class="table table-bordered">
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Name</th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td style="padding: 15px"> <%= link_to user.username, user %> </td>
				<td style="padding: 15px"> <%= user.email%> </td>
				<% @user_profile = UserProfile.where( user_id: user.id ).first %>
				<td style="padding: 15px"> <%= @user_profile.fullname %> </td>   
			</tr>
		<% end %>
	</table>
	<%= will_paginate @users %>
<% else %>
	<%= "You are not signed in!" %>
<% end %>
	</div>
</div>