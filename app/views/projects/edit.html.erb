<% provide(:title, 'Edit Project') %>
<% if user_signed_in? %>
<div class="container-fluid" style="background-color: #015629; padding-top: 5%; padding-bottom: 5%">
    <div class="span12 hero-unit offset4" style="background-color: #e6fae1; width: 40%" align="center">
        <%= simple_nested_form_for(@project, :align => "center") do |f| %>
            <%= render 'form', :f => f %>

            <div class="btn-toolbar">
                <div class="row-fluid">
                    <%= f.button :submit, "Update", :class => "btn btn-success" %>
                    <% end %>
                    <%= button_to "Cancel", :back, :class => "btn btn-success", :method => :get %>
              </div>
            </div><!-- /btn-toolbar -->
    </div><!-- /hero-unit-->
</div><!-- /containerfluid -->
<% end %>