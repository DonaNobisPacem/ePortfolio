<% provide(:title, 'Create Project') %>

<div class="container-fluid" style="background-color: #015629; padding-top: 5%; padding-bottom: 5%">
    <div class="span12 hero-unit offset4" style="background-color: #e6fae1; width: 40%" align="left">
        <%= simple_form_for(@project, :align => "center") do |f| %>
        <%= image_tag "title.png"%> <%= f.input :title, :required => true, :autofocus => true, :placeholder => "Project Title", :label => false %><br>
        <%= image_tag "author.png"%> <%= f.input :contributor, :required => true, :autofocus => true, :placeholder => "Project Proponent(s)", :label => false %><br>
        <%= image_tag "desc.png"%> <%= f.input :description, :required => true, :autofocus => true, :placeholder => "Project Description", :label => false %><br>
        <%= image_tag "tags.png"%> <%= f.input :tag_list, :placeholder => "Project Tags, separated by commas", :label => false %><br>
        <%= image_tag "ref.png"%> <%= f.input :link, :required => true, :placeholder => "Project Source", :label => false %><br>
        <!--
        "Ala sense maglagay ng rating sa sariling projects" 
        Rating: <input class="rating" type="number" data-max="4" data-min="0" data-clearable="remove" name="your_awesome_parameter" id="some_id" /> -->
        <div class="btn-toolbar">
          <div class="row-fluid">
            <%= f.button :submit, "Create Project", :class => "btn btn-success" %>
            <% end %>
            <%= image_tag "space.png"%> 
            <%= button_to "Cancel", :back, :class => "btn btn-success" %>
          </div>
        </div><!-- /btn-toolbar -->
    </div><!-- /hero-unit-->
  </div><!-- /containerfluid -->