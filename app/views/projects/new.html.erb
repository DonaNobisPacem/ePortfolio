<h2>Create Project</h2>

<%= simple_form_for @project do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
  	<%= f.input :title, :required => true, :autofocus => true %>
 	  <%= f.input :contributor, :required => true, :autofocus => true %>
    <%= f.input :description, :required => true, :autofocus => true %>
    <%= f.input :link, :required => true %>
    <%= f.input :link_type %>
    <%= f.input :tag %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Project" %>
  </div>
<% end %>